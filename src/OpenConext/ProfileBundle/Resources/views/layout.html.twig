{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,700,500,300' rel='stylesheet' type='text/css'>
    <link href="{{ asset('mdl/material.min.css') }}" rel='stylesheet' type='text/css' />
    <link href="{{ asset('styles/main.css') }}" rel='stylesheet' type='text/css' />
{% endblock %}

{% block body %}
    <div class="mdl-layout mdl-layout mdl-layout--fixed-header mdl-js-layout mdl-color--grey-100">
        <header class="mdl-layout__header mdl-layout__header--scroll mdl-color--white mdl-color-text--grey-800">
            <div class="mdl-layout__header-row">

                <span class="mdl-layout-title">{{ 'profile.title'|trans }}</span>

                <div class="mdl-layout-spacer"></div>

                <nav class="mdl-navigation">
                    {#<a class="mdl-navigation__link" href="">Link</a>#}
                    {#<a class="mdl-navigation__link" href="">Link</a>#}
                    {#<a class="mdl-navigation__link" href="">Link</a>#}
                    {#<a class="mdl-navigation__link" href="">Link</a>#}
                </nav>
            </div>
        </header>

        <main class="mdl-layout__content">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--2-col "></div>
                <div class="content mdl-color--white mdl-shadow--4dp mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </main>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('mdl/material.min.js') }}"></script>
{% endblock %}
