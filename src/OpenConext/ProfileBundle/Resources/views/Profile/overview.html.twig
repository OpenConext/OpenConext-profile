{% extends 'OpenConextProfileBundle::layout.html.twig' %}

{% block title %}
    {{ 'profile.profile.short_title'|trans }} &mdash; {{ parent() }}
{% endblock %}

{% block content %}
    <h1>{{ 'profile.profile.long_title'|trans }}</h1>
    <div class="table-container">
        <table class="overview-table mdl-data-table">
            <thead>
            <tr>
                <th>{{ 'profile.table.attribute_name'|trans }}</th>
                <th>{{ 'profile.table.attribute_value'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for attribute in app.user.attributes %}
            <tr>
                <td class="strong">
                    <p>{{ ('profile.saml.attribute.' ~ attribute.attributeDefinition.name)|trans({}, 'saml') }}</p>
                </td>
                <td>
                    {% if attribute.value is iterable %}
                        {% for value in attribute.value %}
                            <p>{{ value }}</p>
                        {% endfor %}
                    {% else %}
                        <p>{{ attribute.value }}</p>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
