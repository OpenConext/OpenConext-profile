{% extends 'OpenConextProfileBundle::layout.html.twig' %}

{% block title %}
    {{ 'profile.services.short_title'|trans }} &mdash; {{ parent() }}
{% endblock %}

{% block content %}
    <h1>{{ 'profile.services.long_title'|trans }}</h1>
    <div class="table-container">
        <table class="mdl-data-table overview-table">
        {% for consent in consents %}
            <tr class="service">
                <td>
                    <span class="service-name">
                        <i class="caret fa fa-angle-down"></i>
                        {% if consent.serviceProvider.displayName.hasFilledTranslationForLocale(app.request.locale) %}
                           {{ consent.serviceProvider.displayName.translation(app.request.locale) }}
                        {% endif %}
                    </span>
                    <div class="service-details">
                        <table class="service-info">
                            {% if consent.serviceProvider.hasEulaUrl %}
                            <tr>
                                <td>{{ 'profile.services.eula'|trans }}:</td>
                                <td>
                                    <a href="{{ consent.serviceProvider.eulaUrl }}">
                                        {{ consent.serviceProvider.eulaUrl }}
                                    </a>
                                </td>
                            </tr>
                            {% endif %}
                            {% if consent.serviceProvider.hasSupportEmail %}
                            <tr>
                                <td>{{ 'profile.services.supportEmail'|trans }}:</td>
                                <td>
                                    <i class="fa fa-envelope"></i>
                                    <a href="{{ 'mailto:' ~ consent.serviceProvider.supportEmail }}">
                                        {{ consent.serviceProvider.supportEmail }}
                                    </a>
                                </td>
                            </tr>
                            {% endif %}
                            <tr>
                                <td>{{ 'profile.services.consent_type'|trans }}:</td>
                                <td>
                                {% if consent.consentType.isExplicit %}
                                    {{ 'profile.services.explicit_consent_given'|trans }}
                                {% else %}
                                    {{ 'profile.services.implicit_consent_given'|trans }}
                                {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td>{{ 'profile.services.consent_last_used_on'|trans }}:</td>
                                <td>
                                    {{ consent.lastUsedOn.date|date('Y-m-d h:i')}}
                                </td>
                            </tr>
                        </table>
                        <div class="service-attributes">
                            <p>{{ 'profile.services.attribute_release_description'|trans }}</p>
                            <table class="mdl-data-table">
                                <thead>
                                <tr>
                                    <th>{{ 'profile.table.attribute_name'|trans }}</th>
                                    <th>{{ 'profile.table.attribute_value'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for attribute in app.user.attributes %}
                                    <tr>
                                        <td>
                                            <strong>{{ ('profile.saml.attribute.' ~ attribute.attributeDefinition.name)|trans({}, 'saml') }}</strong>
                                        </td>
                                        <td>
                                            {% if attribute.value is iterable %}
                                                {{ attribute.value|join(', ') }}
                                            {% else %}
                                               {{ attribute.value }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/services.js') }}"></script>
{% endblock %}
