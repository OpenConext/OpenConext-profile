{% if app.session.flashbag is not empty %}
    {% for type, messages in app.session.flashBag %}
        {% for message in messages %}
            <div class="toast">
                <p>
                    {% if type == 'success' %}
                        <i class="fa fa-check"></i>
                    {% elseif type == 'error' %}
                        <i class="fa fa-exclamation-triangle"></i>
                    {% endif %}
                    {{ message|trans }}
                </p>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
