{
    "name": "openconext/openconext-profile",
    "license": "Apache-2.0",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "require": {
        "ext-json": "*",
        "php": "^7.2",
        "beberlei/assert": "^2.4",
        "doctrine/annotations": "^1.13",
        "guzzlehttp/guzzle": "^6.1",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/translation-bundle": "^1.1",
        "nelmio/security-bundle": "^2.10",
        "openconext/monitor-bundle": "^3.1",
        "sensio/framework-extra-bundle": "^5.5",
        "surfnet/stepup-saml-bundle": "4.4.*",
        "symfony/expression-language": "4.4.*",
        "symfony/flex": "^1.18",
        "symfony/form": "4.4.*",
        "symfony/mailer": "4.4.*",
        "symfony/monolog-bundle": "^3.7",
        "symfony/security-bundle": "4.4.*",
        "symfony/translation": "4.4.*",
        "symfony/twig-bundle": "4.4.*",
        "symfony/web-profiler-bundle": "4.4.*",
        "symfony/webpack-encore-bundle": "^1.17",
        "twig/extensions": "^1.5",
        "twig/extra-bundle": "^2",
        "twig/twig": "^2"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "malukenho/docheader": "^0.1.6",
        "matthiasnoback/symfony-config-test": "^4.2",
        "mockery/mockery": "^0.9.4",
        "overtrue/phplint": "^2.0",
        "phpdocumentor/reflection-docblock": "3.3.*",
        "phpmd/phpmd": "^2.8",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^7.5",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.1",
        "symfony/debug-bundle": "4.4.*",
        "symfony/stopwatch": "4.4.*"
    },
    "conflict": {
         "symfony/symfony": "*"
    },
    "scripts": {
        "tests" : [
            "./ci/docheader.sh",
            "./ci/phpmd.sh",
            "./ci/phpcs.sh",
            "./ci/phplint.sh",
            "./ci/phpunit.sh",
            "./ci/security-checker.sh",
            "./ci/npm-audit.sh"
        ],
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.2.20"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        },
        "symfony-assets-install": "relative",
        "incenteev-parameters": [
            {
                "file": "config/openconext/parameters.yaml"
            },
            {
                "file": "config/openconext/global_view_parameters.yaml"
            }
        ]
    }
}
