{% extends 'OpenConextProfileBundle::layout.html.twig' %}

{% block title %}
    {{ 'profile.services.short_title'|trans }} &mdash; {{ parent() }}
{% endblock %}

{% block content %}
    <h1>{{ 'profile.services.long_title'|trans }}</h1>
    <div class="table-container">
        <table class="mdl-data-table overview-table">
        {% for consent in consents %}
            <tr class="service">
                <td>
                    <span class="service-name">
                        <i class="caret fa fa-angle-down"></i>
                        {% if consent.serviceProvider.displayName.hasFilledTranslationForLocale(app.request.locale) %}
                           {{ consent.serviceProvider.displayName.translation(app.request.locale) }}
                        {% endif %}
                    </span>

                    <div class="service-details">
                        <ul>
                            {% if consent.serviceProvider.hasEulaUrl %}
                            <li>
                                <a href="{{ consent.serviceProvider.eulaUrl }}">{{ 'profile.services.eula'|trans }}</a>
                            </li>
                            {% endif %}

                            {% if consent.serviceProvider.hasSupportEmail %}
                            <li>
                                <a href="{{ 'mailto:' ~ consent.serviceProvider.supportEmail }}">{{ 'profile.services.support_email'|trans }}</a>
                            </li>
                            {% endif %}
                        </ul>
                        <p>{{ 'profile.services.consent_message'|trans }}</p>
                        <p>{{ 'profile.services.attribute_release_description'|trans }}</p>
                        <table class="mdl-data-table">
                            <thead>
                            <tr>
                                <th>{{ 'profile.table.attribute_name'|trans }}</th>
                                <th>{{ 'profile.table.attribute_value'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for attribute in app.user.attributes %}
                                <tr>
                                    <td>
                                        <strong>{{ ('profile.saml.attribute.' ~ attribute.attributeDefinition.name)|trans({}, 'saml') }}</strong>
                                    </td>
                                    <td>
                                        {% if attribute.value is iterable %}
                                            {{ attribute.value|join(', ') }}
                                        {% else %}
                                           {{ attribute.value }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/services.js') }}"></script>
{% endblock %}
